.message_datum {
  width: 100%;
  background-color: white;
  padding-top: 100rpx;
  background-color: #41ACFF;
  position: relative;
}

.datum {
  padding: 20rpx 0;
  margin: 0 20rpx;
  height: 90rpx;
  background-color: white;
  position: relative;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}

.cells {
  position: absolute;
  top: -95rpx;
}

.cells_bag {
  padding: 20rpx;
  background-color: white;
  border-radius: 50%;
}

.cells_imgs {
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
}

.cells_txt {
  /*改变点击背景*/
  border: none;
  background-color: transparent;
  outline: none;
  text-align: left;
  font-size: 30rpx;
  flex: 1;
  line-height: 1.6rem;
  text-align: center;
}

.cells_txt>view:nth-child(2) {
  color: #8E8E8E;
  font-size: 26rpx;
}

.cells_ico {
  margin-left: auto;
  height: 20rpx;
  width: 15rpx;
}

.desc {
  margin: 0rpx 20rpx 20rpx;
  padding: 70rpx 0 20rpx;
  background-color: white;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.desc_view {
  display: flex;
  text-align: center;
  justify-content: center;
}

.desc_view>navigator {
  width: 25%;
}
.desc_view>navigator:last-of-type{
  border-right:0rpx;
}

.desc_view image {
  width: 60rpx;
  height: 60rpx;
}

.desc_view text {
  display: block;
  font-size: 24rpx;
  color: #808080;
}

.container {
  background-color: white;
  margin: 0 20rpx;
  border-top-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
}

.zan-panel {
  padding: 0rpx;
}

.zan-cells {
  display: flex;
  padding: 30rpx;
  align-items: center;
  border-bottom: 1rpx solid #F7F7F7;
}

.zan-imgs {
  display: block;
  width: 30rpx;
  height: 30rpx;
}

.zan-cell__bd {
  color: #515151;
  flex: 1;
  font-size: 26rpx;
  margin-left: 20rpx;
}

/* 去除button默认样式 */
.button::after {
  border: none;
}

.button {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 99;
  top: 0;
  opacity: 0.01;
  padding-left: 0;
  padding-right: 0;
  line-height: inherit;
  border-radius: 0;
}

/* login */
.dialog-login {
  z-index: 99;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}


.dialog-login .dialog-body {
  width: 470rpx;
  height: auto;
  overflow: hidden;
  background: #fff;
  border-radius: 5px;
  padding: 40rpx;
}

.header {
  margin: 50rpx 0 50rpx 50rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 85%;
  height: 150rpx;
  line-height: 50rpx;
}

.header image {
  width: 35%;
  height: 35%;
}

.content {
  margin-left: 50rpx;
  margin-bottom: 85rpx;
}

.login-button {
  border-radius: 50rpx;
  margin: 70rpx 55rpx;
  font-size: 25rpx;
}