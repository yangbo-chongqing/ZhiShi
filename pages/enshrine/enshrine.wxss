.collect {
  border-radius: 20rpx;
  background-color: white;
  overflow: hidden;
  display: flex;
  margin: 20rpx;
  padding: 20rpx;
  align-items: center;
  box-shadow: 10rpx 10rpx 10rpx #ccc;
}

.collect_img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 20rpx;
}

.collect_txt {
  height: 140rpx;
  margin-left: 20rpx;
  line-height: 1.6rem;
}

.collect_txt>view:nth-child(1) {
  color: #515151;
  font-weight: 500;
  opacity: 0.9;
  font-size: 26rpx;
}

.collect_txt>view:nth-child(2) {
  font-size: 28rpx;
  color: #808080;
  font-size: 24rpx;
}

.collect_cancel {
  padding: 10rpx 15rpx;
  text-align: center;
  border: 1rpx solid #c2c1c1;
  border-radius: 10rpx;
  margin-left: auto;
  color: #A7A7A7;
  font-size: 24rpx;
}