image{
  width: 100%;
  height: 100%;
  z-index: -99;
}
.apply_b {
  text-align: center;
  align-items: center;
  width: 100%;
  justify-content: space-around; 
  position:fixed; 
  bottom:25%;
}
.apply_b > view {
  width: 50%;
  height: 100rpx;
  line-height: 100rpx; 
  font-size: 26rpx;
  font-weight: 700;
 margin-left: 25%;
} 
.apply_b>view:nth-child(1) {
  background-color: #3c7bef;
  color: white;
   border-radius: 10rpx; 
}
.apply_b>view:nth-child(2) {
  margin-top: 20rpx;
  background-color: #3c7bef;
  color: white;
  border-radius: 10rpx; 
}
.apply_b>view:nth-child(2)> view:nth-child(2)  {
  background-color: #3c7bef;
  color: white;
  border-radius: 10rpx; 
  margin-top: 20rpx;
}