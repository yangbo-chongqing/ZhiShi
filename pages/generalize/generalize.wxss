.generalize {
  padding: 30rpx;
  display: flex;
  align-items: center;
  background-color: white;
  margin-bottom: 10rpx;
}

.generalize_img {
  width: 40rpx;
  height: 40rpx;
}

.generalize_txt {
  margin-left: 40rpx;
  color: #515151;
  font-size: 24rpx;
}

.generalize_arrows {
  width: 28rpx;
  height: 28rpx;
  margin-left: auto;
}

.cause {
  width: 100%;
  margin-bottom: 0;
  padding-left: 0;
  padding-bottom: 0;
}

.bor {
  display: flex;
  align-items: center;
  width: 100%;
  margin-left: 30rpx;
  padding: 0 30rpx 30rpx 0;
  border-bottom: 1rpx solid #ccc;
}

.radio {
  padding: 40rpx;
  background-color: white;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  color: #515151;
}

.radio .wx-radio-input {
  border-radius: 50%;
  height: 30rpx;
  width: 30rpx;
}

.radio>radio-group {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.radio radio:nth-child(1) {
  margin-left: 30rpx;
}

.radio radio:nth-child(3) {
  margin-right: 30rpx;
}

.explain {
  background-color: white;
  padding: 50rpx 20rpx 20rpx 20rpx;
  font-size: 24rpx;
  line-height: 1.6rem;
  margin-bottom: 140rpx;
  color: #515151;
}

.apply {
  width: 100%;
  display: flex;
  position: fixed;
  align-items: center;
  justify-content: center;
  bottom: 0;
  background-color: white;
  font-size: 26rpx;
}

.apply>view {
  width: 50%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.apply>view:nth-child(2) {
  background-color: #41ACFF;
}