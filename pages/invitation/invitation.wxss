.invi_title_2 {
  padding: 20rpx;
  margin: 40rpx 20rpx;
  border-radius: 20rpx;
  background-color: white;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.title_2 {
  font-size: 26rpx;
  color: white;
  padding: 10rpx 60rpx;
