  background-color: #0D90FF;
}

.invi_text {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 10rpx 0;
}

.text_img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.txt {
  margin-left: 20rpx;
  width: auto;
}

.txt>view:nth-of-type(1) {
  font-size: 26rpx;
}

.txt>view:nth-of-type(2) {
